<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sapotero.esd.Activity.DocumentViewActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:adjustViewBounds="false"
        android:background="#efe6e6"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/id"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="description"
        android:id="@+id/description"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_above="@+id/author"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:id="@+id/author"
        android:textStyle="bold|italic"
        android:layout_alignBottom="@+id/image"
        android:layout_alignStart="@+id/description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:id="@+id/id"
        android:layout_alignTop="@+id/title"
        android:layout_alignEnd="@+id/description"
        android:textStyle="italic"
        android:textColor="#362f2f2f"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show pdf"
        android:id="@+id/pdf"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="showPdf"/>

</RelativeLayout>
